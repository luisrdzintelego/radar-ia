Options -MultiViews

<IfModule mod_rewrite.c>
  <IfModule mod_proxy.c>
    RewriteEngine On
    ProxyPreserveHost Off
    
    # PRIMERO: Proxy para API
    RewriteRule ^api/(.*)$ http://radar-ia-env.eba-tkuneqkw.us-east-1.elasticbeanstalk.com/$1 [P,L]
    
    # DESPUÃ‰S: SPA routing para React
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^ index.html [QSA,L]
  </IfModule>
</IfModule>

# Fallback si no hay mod_rewrite
<IfModule !mod_rewrite.c>
  ErrorDocument 404 /index.html
</IfModule>
